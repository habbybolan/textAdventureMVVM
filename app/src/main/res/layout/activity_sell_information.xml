<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/behind_scroll">

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="@dimen/default_btn_width"
            android:layout_height="@dimen/default_btn_height"
            android:layout_marginEnd="@dimen/inventory_info_button_side_margin"
            android:layout_marginTop="@dimen/inventory_info_button_top_margin"
            android:onClick="confirmSell"
            android:text="@string/sell"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/fragment_sell_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/back_button" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="@dimen/default_btn_width"
            android:layout_height="@dimen/default_btn_height"
            android:layout_marginStart="@dimen/inventory_info_button_side_margin"
            android:layout_marginTop="@dimen/inventory_info_button_top_margin"
            android:onClick="backButton"
            android:text="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>