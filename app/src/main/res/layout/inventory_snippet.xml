<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="inventoryPic"
            type="Integer" />
        <variable
            name="inventoryName"
            type="String" />
    </data>
    <LinearLayout
        android:id="@+id/attack_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="@dimen/action_margin_top"
        android:background="@drawable/action_back"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_icon_attack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:imageResource="@{inventoryPic}" />

        <TextView
            android:id="@+id/txt_name_attack"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:text="@{inventoryName}" />

        <ImageView
            android:id="@+id/inventory_info_attack"
            android:layout_width="@dimen/inventory_info_icon_size"
            android:layout_height="@dimen/inventory_info_icon_size"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/inventory_info_icon_margins"
            android:layout_marginEnd="@dimen/inventory_info_icon_margins"
            app:srcCompat="@drawable/inventory_info" />

    </LinearLayout>
</layout>