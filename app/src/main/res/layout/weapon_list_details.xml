<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="weaponIconResource"
            type="Integer" />
        <variable
            name="weaponName"
            type="String" />

        <variable
            name="attackIconResource"
            type="Integer" />
        <variable
            name="attackName"
            type="String" />

        <variable
            name="sAttackIconResource"
            type="Integer" />
        <variable
            name="sAttackName"
            type="String" />
    </data>
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/weapon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/action_margin_top"
            android:background="@drawable/action_back">

            <ImageView
                android:id="@+id/img_icon_weapon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:imageResource="@{weaponIconResource}"/>

            <TextView
                android:id="@+id/txt_name_weapon"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="@{weaponName}"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/attack_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weapon_container"
            android:layout_marginStart="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/action_margin_top"
            android:background="@drawable/action_back">

            <ImageView
                android:id="@+id/img_icon_attack"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:imageResource="@{attackIconResource}" />

            <TextView
                android:id="@+id/txt_name_attack"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="@{attackName}" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/s_attack_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/attack_container"
            android:layout_marginStart="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/action_margin_top"
            android:background="@drawable/action_back">

            <ImageView
                android:id="@+id/img_icon_s_attack"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:imageResource="@{sAttackIconResource}" />

            <TextView
                android:id="@+id/txt_name_s_attack"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="@{sAttackName}" />

        </LinearLayout>

    </RelativeLayout>

</layout>