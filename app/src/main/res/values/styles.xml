<resources>

    <style name="AppTheme"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/press_start_2p</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="buttonStyle">@style/DefaultButton</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="DefaultButton" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/custom_default_button</item>
        <item name="android:layout_width">@dimen/default_btn_width</item>
        <item name="android:layout_height">@dimen/default_btn_height</item>
        <item name="paddingEnd">10dp</item>
        <item name="paddingStart">10dp</item>
    </style>

    <style name="DefaultCategoryButton" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/custom_default_category_button</item>
        <item name="android:layout_width">@dimen/default_category_btn_width</item>
        <item name="android:layout_height">@dimen/default_category_btn_height</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="DungeonPopupAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_dungeon_show</item>
        <item name="android:windowExitAnimation">@anim/popup_dungeon_hide</item>
    </style>


</resources>
